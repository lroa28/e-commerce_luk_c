<div class="container mx">
  <h2>AGREGAR PRODUCTO</h2>
  <form method="post" class="m-4">
    <div class="input-group">
      <label for="title" class="input-group-text">Nombre </label>
      <input name="title" placeholder="Title" class="form-control" required />
    </div>
    <div class="input-group">
      <label for="price" class="input-group-text">Precio </label>
      <input
        name="price"
        type="number"
        placeholder="Price"
        class="form-control"
        required
      />
    </div>
    <div class="input-group">
      <label for="thumbnail" class="input-group-text">Imagen </label>
      <input
        name="thumbnail"
        type="url"
        placeholder="Imagen"
        class="form-control"
        required
      />
    </div>
    <div class="col-12">
      <button class="btn btn-primary" type="submit">Submit</button>
    </div>
  </form>
</div>