            <label for="userName" class="input-group-text visually-hidden">Usuario </label>
            <input name="userName" placeholder="Usuario" class="form-control" required>
        </div>
        <div class="input-group">
            <label for="phone" class="input-group-text visually-hidden">Telefono </label>
            <input id="phone" type="tel" name="phone" placeholder="Telefono" class="form-control" required>
        </div>
        {{> formErr }}
