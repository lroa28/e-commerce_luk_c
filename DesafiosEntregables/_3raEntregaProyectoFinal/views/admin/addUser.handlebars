            <label for="confirmPassword" class="input-group-text visually-hidden">Confirmar Contrase単a </label>
            <input name="confirmPassword" type="password" placeholder="Confirmar Contrase単a" class="form-control" required>
        </div>
        <div class="col-2">
            <button class="btn btn-primary" type="submit">Submit</button>
        </div>
    </form>
</div>