<div class="container mx">
  <h2>Pedidos</h2>
      <table class="table table-sm table-hover">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Usuario</th>
                <th scope="col">Fecha</th>
                <th scope="col">Total</th>
                <th scope="col">Enviado</th>
                <th scope="col">&nbsp;</th>
            </tr>
        </thead>
        <tbody class="">
            {{#each orders}}
            <tr>
              <td>{{this.userId}}</td>
              <td>{{this.created}}</td>
              <td>{{this.total}}</td>
              <td>{{this.send}}</td>
              <td>        
                <div class="d-grid gap-2 col-1 mx-auto">
                  <button class="btn btn-dark" type="button" onclick="sendOrder('{{this._id}}')">Enviar</button>
                </div>
              </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
  <div class="d-grid gap-2 col-6 mx-auto">
    <button class="btn btn-dark" type="button" onclick="deleteAllOrders()">Borrar todas</button>
  </div>
  <div class="d-grid gap-2 col-6 mx-auto">
    <a href="/admin" class="btn btn-dark" type="button">Atras</a>
  </div>
</div>