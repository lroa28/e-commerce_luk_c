<div class="container mx">
  <div>
    <h3>Bienvenido {{{firstName}}}</h3>
  </div>






  <h2>PRODUCTOS</h2>
    <div id="contenCard" class="row row-cols-2 row-cols-md-4 g-4">
      {{#each products}}
      <div id="card" class="card" style="width: 18rem;">
        <img src="{{this.thumbnail}}" class="card-img-top" alt="{{this.title}}" />
        <div class="card-body">
          <h5 class="card-title">{{this.title}}</h5>
          <p class="card-text">{{this.price}}</p>
          <p class="card-text">{{this.description}}</p>
          <button id="add-to-cart" class="btn btn-dark" onclick="addToCart('{{{../cartId}}}', '{{this._id}}')">
            Agregar al carrito <span id="addSpan" class="badge text-bg-secondary">ðŸ§º</span>
              </span>  
          </button>
        </div>
      </div>
      {{/each}}
    </div>




  <h2>Chat</h2>

  <div id="room"></div>

  <form id="formulario" class="m-4">
    <div class="input-group">
      <label for="mail" class="input-group-text">Mail </label>
      <input
        id="mail"
        name="mail"
        type="email"
        placeholder="Mail"
        class="form-control"
        required
      />
    </div>
    <div class="input-group">
      <label for="nombre" class="input-group-text">Nombre </label>
      <input
        id="nombre"
        name="nombre"
        type="text"
        placeholder="Nombre"
        class="form-control"
        required
      />
    </div>
    <div class="input-group">
      <label for="apellido" class="input-group-text">Apellido </label>
      <input
        id="apellido"
        name="apellido"
        type="text"
        placeholder="Apellido"
        class="form-control"
        required
      />
    </div>
    <div class="input-group">
      <label for="alias" class="input-group-text">Alias </label>
      <input
        id="alias"
        name="alias"
        type="text"
        placeholder="Alias"
        class="form-control"
        required
      />
    </div>
    <div class="input-group">
      <label for="edad" class="input-group-text">Edad </label>
      <input
        id="edad"
        name="edad"
        type="text"
        placeholder="Edad"
        class="form-control"
        required
      />
    </div>
    <div class="input-group">
      <label for="avatar" class="input-group-text">Avatar </label>
      <input
        id="avatar"
        name="avatar"
        type="text"
        placeholder="Avatar"
        class="form-control"
        required
      />
    </div>
    <div class="input-group">
      <label for="mensaje" class="input-group-text">Mensaje </label>
      <input
        id="mensaje"
        name="mensaje"
        type="text"
        placeholder="Mensaje"
        class="form-control"
        required
      />
    </div>
    <div class="col-12">
      <button id="btn" class="btn btn-primary" type="submit">Submit</button>
    </div>
  </form>
</div>